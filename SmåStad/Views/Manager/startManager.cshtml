
@{
  Layout = "_ManagerLayout";
  @model IRepository
}

<div id="content">
  <h2>Ärenden</h2>
  <p class="info">Du är inloggad som avdelningschef</p>

  <table id="managerForm">
    <tr>
      <td class="label">Välj status:</td>
      <td class="label">Välj handläggare:</td>
      <td>&nbsp;</td>
      <td class="label">Ärendenummer:</td>
      <td>&nbsp;</td>
    </tr>
    <tr>
      <td>
        @await Component.InvokeAsync("StatusList")
      </td>
      <td>
        <select>
          <option>Välj alla</option>
          @foreach (Employee e in Model.Employees) {
            <option>@e.EmployeeName</option>
          }
        </select>
      </td>
      <td><input class="button" type="submit" value="Hämta lista" /></td>
      <td><input name="casenumber" /></td>
      <td><input class="button" type="submit" value="Sök" /></td>
    </tr>
  </table>

  <table>
    <tr>
      <th>Ärende anmält</th>
      <th>Ärendenummer</th>
      <th>Miljöbrott</th>
      <th>Status</th>
      <th>Avdelning</th>
      <th>Handläggare</th>
    </tr>

    @foreach (NewErrand e in Model.ManagerTable) {
      <tr>
        <td>@e.DateOfObservation</td>
        <td><a asp-controller="Manager" asp-action="crimeManager" asp-route-id="@e.RefNumber">@e.RefNumber</a></td>
        <td>@e.TypeOfCrime</td>
        <td>@e.StatusName</td>
        <td>@e.DepartmentName</td>
        <td>@e.EmployeeName</td>
      </tr>

    }
  </table>

</div><!-- End Content -->
